<div class="content_image">
  <div class="content_post" style="background-image: url(<%= matelpage.image %>);">
    <%= simple_format(matelpage.country) %>
  </div>
    <%= simple_format(matelpage.text) %>
    
<div class="comments">
      <h4>＜コメント一覧＞</h4>
